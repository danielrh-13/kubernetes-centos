#a la imagen oficial de Jenkins LTS como base
FROM jenkins/jenkins:2.454

# Cambia al usuario root para poder instalar paquetes
USER root

# Instala kubectl
RUN curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl" \
    && chmod +x ./kubectl \
    && mv ./kubectl /usr/bin/kubectl

# Install sudo and network tools
RUN apt-get update && apt-get install -y \
    sudo \
    iputils-ping \
    dnsutils \
    && echo "jenkins ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers

# Clean up apt cache to reduce image size
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# Cambia de nuevo al usuario jenkins para la ejecuci√≥n de Jenkins
USER jenkins
ENV PATH="/bin:${PATH}"
